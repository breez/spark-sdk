{
  "name": "@breez-sdk/web-storage",
  "version": "1.0.0",
  "type": "module",
  "description": "Web IndexedDB storage implementation for Breez SDK WASM (ES Modules)",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./storage": "./index.js",
    "./migrations": "./migrations.js",
    "./errors": "./errors.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.56.0",
    "fake-indexeddb": "^5.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "globals": {
      "indexedDB": "readonly"
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breez/rust-spark"
  },
  "keywords": [
    "breez",
    "lightning",
    "indexeddb",
    "storage",
    "wasm",
    "web",
    "browser"
  ],
  "author": "Breez Technology Ltd.",
  "license": "MIT"
}
